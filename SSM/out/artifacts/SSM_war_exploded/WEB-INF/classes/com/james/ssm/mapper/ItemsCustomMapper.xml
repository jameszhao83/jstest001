<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.james.ssm.mapper.ItemsCustomMapper">

	<sql id="query_item_where">
		<if test="itemsCustom != null ">
			<if test="itemsCustom.name != null  and itemsCustom.name !=''" >
				items.name like '%${itemsCustom.name}%'
			</if>
		</if>
	</sql>

	<select id="queryItemList" parameterType="com.james.ssm.po.ItemsQueryVo"  resultType="com.james.ssm.po.ItemsCustom">
		select *  from items
		<where>
			<include refid="query_item_where"></include>
		</where>
	</select>


</mapper>

